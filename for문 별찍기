#예제) 별찍기6
n = 5  # 중심 기준 (전체 줄 수 = 2n - 1)

# 윗부분
for i in range(n):
    print(" " * (n - i - 1), end="")
    if i == 0:
        print("*")
    else:
        print("*" + " " * (2 * i - 1) + "*")

# 아랫부분
for i in range(n - 2, -1, -1):
    print(" " * (n - i - 1), end="")
    if i == 0:
        print("*")
    else:
        print("*" + " " * (2 * i - 1) + "*")
